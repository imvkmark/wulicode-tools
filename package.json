{
    "name": "wulicode-webapp",
    "version": "0.2.1",
    "private": true,
    "description": "wulicode webapp",
    "scripts": {
        "start:local": "vite --mode=self",
        "start:prod": "vite --mode=prod",
        "build:local": "vite build --mode=self",
        "build:prod": "vite build --mode=prod",
        "build-tsc": "vue-tsc --noEmit && vite build",
        "serve": "vite preview",
        "test": "jest --config ./jest.config.js",
        "format": "prettier --write ./src",
        "lint": "eslint ./src --ext .vue,.js,.ts",
        "lint-fix": "eslint --fix ./src --ext .vue,.js,.ts",
        "prepare": "husky install config/.husky",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
        "core": "cd pkg/core && nrm use npm && pnpm publish --no-git-checks --access=public && nrm use taobao"
    },
    "keywords": [
        "Vite",
        "Vue3",
        "TypeScript",
        "Starter"
    ],
    "author": "duoli",
    "license": "MIT",
    "lint-staged": {
        "*.{vue,js,ts}": "eslint --fix"
    },
    "dependencies": {
        "@element-plus/icons-vue": "^1.1.3",
        "@types/jest": "^27.4.1",
        "@vant/use": "^1.3.6",
        "axios": "^0.26.1",
        "crypto-js": "^4.0.0",
        "dayjs": "^1.11.1",
        "element-plus": "^2.1.9",
        "keymaster": "^1.6.2",
        "lodash-es": "^4.17.21",
        "mitt": "^3.0.0",
        "qs": "^6.10.2",
        "svg-sprite-loader": "^6.0.11",
        "ua-parser-js": "^1.0.2",
        "vue": "^3.2.33",
        "vue-json-viewer": "3",
        "vue-router": "^4.0.14",
        "vue3-clipboard": "^1.0.0",
        "vuex": "^4.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.2.3",
        "@commitlint/config-conventional": "^16.2.1",
        "@types/crypto-js": "^4.1.1",
        "@types/keymaster": "^1.6.30",
        "@types/lodash-es": "^4.17.6",
        "@types/node": "^17.0.24",
        "@types/qs": "^6.9.7",
        "@types/ua-parser-js": "^0.7.36",
        "@typescript-eslint/eslint-plugin": "^5.19.0",
        "@typescript-eslint/parser": "^5.19.0",
        "@vitejs/plugin-vue": "^2.2.4",
        "@vue/compiler-sfc": "^3.2.33",
        "dotenv": "^16.0.0",
        "eslint": "^8.13.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-vue": "^8.6.0",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "less": "^4.1.2",
        "ts-jest": "^27.1.1",
        "typescript": "^4.6.2",
        "vite": "^2.9.5",
        "vite-plugin-sentry": "^1.0.13",
        "vue-tsc": "^0.34.7"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "type-enum": [
                2,
                "always",
                [
                    "bug",
                    "feat",
                    "fix",
                    "docs",
                    "style",
                    "refactor",
                    "test",
                    "chore",
                    "revert",
                    "merge"
                ]
            ]
        }
    }
}
